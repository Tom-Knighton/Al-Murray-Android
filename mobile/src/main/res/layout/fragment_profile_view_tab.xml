<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.almurray.android.almurrayportal.profileViewTab"
    android:background="@drawable/back2"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                    android:layout_below="@+id/topView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/topView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/refreshButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/quantum_ic_refresh_white_24" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/adminButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/refreshButton"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/ic_settings" />
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/clearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/adminButton"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/quantum_ic_clear_white_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@drawable/gradientblue"
                        android:orientation="vertical">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileSmallImageView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp" />

                        <TextView
                            android:id="@+id/spanishNameLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="Name"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="21sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/profileNameLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="Name"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/statsCard"
                        android:layout_width="400dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="275dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="Amigo Points"
                                    android:textSize="20sp" />

                                <TextView

                                    android:id="@+id/amigoPointsLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:text="125"
                                    android:textColor="@color/startblue"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Positive Points"
                                    android:textSize="19sp" />

                                <TextView
                                    android:id="@+id/positivePointsLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:text="125"
                                    android:textColor="@color/startblue"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Current Team"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/profileTeamLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:text="R"
                                    android:textColor="@color/startblue"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </RelativeLayout>

                <Button
                        android:id="@+id/goToPrayerRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="45dp"
                        android:background="@drawable/nicebuttonback"
                        android:text="Go To Prayer Room"
                        android:textColor="@android:color/white"

                        />

                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="45dp">

                        <TextView
                            android:id="@+id/amigoRankLabel"
                            android:textAlignment="center"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amigo Rank:"/>
                        <TextView
                            android:id="@+id/positiveRankLabel"
                            android:textAlignment="center"
                            android:layout_marginTop="15dp"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Positivity Rank:"/>
                        <TextView
                            android:id="@+id/standingLabel"
                            android:textAlignment="center"
                            android:layout_marginTop="15dp"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Standing:"/>


                    </LinearLayout>

                    <Button
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        style="@style/loginButtonStyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:text="Logout"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"

                        />
                    
                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />


                </LinearLayout>









        </RelativeLayout>


    </ScrollView>




</LinearLayout>
