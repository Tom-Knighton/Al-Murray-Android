<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/userDisplayBox"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userDisplayProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>

        <TextView
            android:gravity="center_horizontal|center|left"
            android:layout_centerHorizontal="true"
            android:id="@+id/userDisplayName"
            android:layout_toRightOf="@+id/userDisplayProfile"
            android:layout_toEndOf="@+id/userDisplayProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            />

        <CheckBox

            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/userDisplayCheck"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checked="false"/>



    </RelativeLayout>


</RelativeLayout>
