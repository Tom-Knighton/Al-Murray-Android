<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.almurray.android.almurrayportal.requestsTab"
    android:background="@drawable/back2">

    <!-- TODO: Update blank fragment layout -->



    <WebView
        android:id="@+id/amigoPForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </WebView>
    <WebView
        android:id="@+id/amigoLForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </WebView>
    <WebView
        android:id="@+id/pPointForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </WebView>
    <WebView
        android:id="@+id/manualForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </WebView>
    <WebView
        android:id="@+id/tipForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </WebView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/codeCard"

                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/startblue"
                android:background="@color/startblue"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"

                >
                <TextView
                    android:id="@+id/codeLabelTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:text="Tap to Reveal Request Code"
                    android:layout_gravity="center"/>




            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_below="@+id/codeCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <Button
                    android:id="@+id/amigoRequest"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="REQUEST AMIGO POINTS" />

                <Button
                    android:id="@+id/loanRequest"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/amigoRequest"
                    android:text="REQUEST AMIGO LOAN" />

                <Button
                    android:id="@+id/posRequest"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/loanRequest"
                    android:text="REQUEST POSITIVITY POINTS" />

                <Button
                    android:id="@+id/manualRequest"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/posRequest"
                    android:text="REQUEST MANUAL REVIEW" />

                <Button
                    android:id="@+id/tip"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/manualRequest"
                    android:text="PRIVATE CONFESSIONS" />
                <Button
                    android:id="@+id/feedback"
                    style="@style/Widget.AppCompat.Button"

                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/tip"
                    android:text="SUBMIT FEEDBACK" />


            </RelativeLayout>


        </RelativeLayout>






    </ScrollView>


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



   </ScrollView>





</FrameLayout>
