<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.almurray.android.almurrayportal.info.infoFragment"
    android:background="@drawable/back2">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/infoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select an Option"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"/>



    <ScrollView
        android:layout_below="@+id/infoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textColor="@android:color/white"
                style="@style/loginButtonStyle"
                android:layout_margin="20dp"
                android:background="@android:color/holo_red_dark"
                android:id="@+id/infoRR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read Rules &amp; Regulations"/>
            <Button
                android:layout_below="@+id/infoRR"
                android:layout_margin="20dp"
                style="@style/loginButtonStyle"
                android:id="@+id/infoDefsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Definitions"/>
            <Button
                style="@style/loginButtonStyle"
                android:layout_margin="20dp"

                android:layout_below="@id/infoDefsButton"
                android:id="@+id/infoGaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read 'Computer Dating'"/>
            <Button
                style="@style/loginButtonStyle"
                android:layout_margin="20dp"
                android:enabled="false"
                android:layout_below="@+id/infoGaryButton"
                android:id="@+id/infoWarRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operations (Unavailable)"/>


        </RelativeLayout>



    </ScrollView>

</RelativeLayout>
