<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.almurray.android.almurrayportal.profileViewTab"
    android:background="@drawable/back2"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:background="@color/loginDark"

            />


    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/topView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:orientation="vertical"
                        android:background="@drawable/gradientblue"
                        >


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/editProfileImage"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp" />

                        <TextView
                            android:id="@+id/editSpanishName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="21sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/editNameLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/profileDM"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="45dp"
                            android:background="@android:color/holo_red_light"
                            android:text="Direct Message"
                            android:textColor="@android:color/white"

                            />
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/editStatsCard"
                        android:layout_width="400dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginEnd="45dp"
                        android:layout_marginTop="275dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="Amigo Points"
                                    android:textSize="20sp" />

                                <TextView

                                    android:id="@+id/editAPointsL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:text=""
                                    android:textColor="@color/startblue"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Positive Points"
                                    android:textSize="19sp" />

                                <TextView
                                    android:id="@+id/editPPointsL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:text=""
                                    android:textColor="@color/startblue"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Current Team"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/editTeamL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:text=""
                                    android:textColor="@color/startblue"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </RelativeLayout>



                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp">

                    <TextView
                        android:id="@+id/editARankL"
                        android:textAlignment="center"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amigo Rank:"/>
                    <TextView
                        android:id="@+id/editPRankL"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Positivity Rank:"/>
                    <TextView
                        android:id="@+id/editStandingL"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Standing:"/>


                </LinearLayout>



                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />


            </LinearLayout>







        </RelativeLayout>




    </ScrollView>




</LinearLayout>
