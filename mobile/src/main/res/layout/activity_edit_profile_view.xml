<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.almurray.android.almurrayportal.editProfileView"
    android:background="@drawable/back2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/editProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="10dp">


            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/editARankView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/editProfileImage"
                android:text="Amigo Rank:"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/editPrankView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/editARankView"
                android:text="Positivity Rank:"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/editAmigoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/editPrankView"
                android:text="Amigo Points:"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/amigoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editAmigoLabel"
                android:onClick="onEditAmigo"
                android:text="Edit" />


            <TextView
                android:id="@+id/editPositiveLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/amigoEdit"
                android:text="Positivity Points:"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/posEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editPositiveLabel"
                android:onClick="onEditPos"
                android:text="Edit" />

            =



        </RelativeLayout>








    </ScrollView>

</android.support.constraint.ConstraintLayout>
