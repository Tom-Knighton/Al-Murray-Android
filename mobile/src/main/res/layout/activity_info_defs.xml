<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.almurray.android.almurrayportal.info.infoDefs"
    android:background="@drawable/back2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <android.support.v7.widget.CardView
                android:layout_below="@+id/seeSOP"
                android:layout_centerHorizontal="true"
                android:id="@+id/amigoismCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/nicebuttonback"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/amigoismTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amigo-ism:"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_below="@id/amigoismTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amigo-ism is the act of being an Amigo (noun: used to address or refer to a friend, chiefly in Spanish-speaking areas). Such acts include doing Amigo-y things, and following the Ten Commandments set by Al Murray."
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/amigoismCard"
                android:id="@+id/amigoishCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/nicebuttonback"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/amigoishTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amigoish:"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_below="@id/amigoishTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amigoish is the language used by Amigos (see above). Amigoish must be used in all designated Amigo chats and for amigo-designated conversations. Translating devices can be used."
                        android:textAlignment="center" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/amigoishCard"
                android:id="@+id/positivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/nicebuttonback"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/positivityTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Positivity:"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_below="@id/positivityTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The act of being positive (adjective: constructive, optimistic, or confident). Everyone should at least make an attempt to be positive, if not always 100% positive. Breif moments of negativity should be allowed, on the basis that they are immediately corrected. Al Murray reccommends that at least a minimum of 27 hours a day are set aside to be positive."
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:background="@drawable/gradientblue"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/positivityCard"
                android:id="@+id/commandmentsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/nicebuttonback"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/commandmentsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ten Commandments:"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_below="@id/commandmentsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1)Obey Al Murray at all times.\n2)Follow Al Murray at all times.\n3)Follow the Murray Chain of Command\n4)Adultery is bad but sometimes necessary\n5)Same with murder\n6)Remember to pray correctly\n7)Follow the Amigo Code\n8)Maintain an amigo rating over 7\n9)Chat responsibly\n10)Respect all citizens."
                        android:textAlignment="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>









        </RelativeLayout>





    </ScrollView>


</RelativeLayout>
