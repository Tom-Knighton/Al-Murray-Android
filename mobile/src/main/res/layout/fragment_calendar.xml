<RelativeLayout xmlns:agendaCalendar="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.almurray.android.almurrayportal.calendarFragment"
    android:background="@drawable/back2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/event1Tab"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/event1Container"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:id="@+id/event1Color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/holo_orange_dark">

                <TextView
                    android:id="@+id/event1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/event1Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/event1Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=""
                    android:layout_marginTop="0dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_below="@id/event1Container"
            android:id="@+id/event2Container"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:id="@+id/event2Color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/holo_orange_dark">

                <TextView
                    android:id="@+id/event2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/event2Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/event2Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=""
                    android:layout_marginTop="0dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_below="@+id/event2Container"
            android:id="@+id/event3Container"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:id="@+id/event3Color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/holo_orange_dark">

                <TextView
                    android:id="@+id/event3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/event3Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/event3Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=""
                    android:layout_marginTop="0dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </android.support.v7.widget.CardView>


        <android.support.design.widget.FloatingActionButton
            android:layout_below="@+id/event3Container"
            android:id="@+id/infoCalendarButton"
            android:layout_width="120dp"
            android:layout_marginTop="30dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_info_outline_white_24px"
            />


</RelativeLayout>
</RelativeLayout>